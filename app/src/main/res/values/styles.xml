<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">

    <!--  BottomNavigation  -->
    <style name="BottomNavigationText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <!--  Text  -->
    <style name="TextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTitle.S20">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="TextBody">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBody.S18">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="TextBody.S16">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="TextLabel">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_shade_60</item>
    </style>

    <style name="TextLabel.S16">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="TextCaption">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_shade_40</item>
    </style>

</resources>