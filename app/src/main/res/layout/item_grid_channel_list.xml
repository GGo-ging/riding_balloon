<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/iv_channel_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/bg_profile_image"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_user_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="구독자"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_channel_image" />

    <TextView
        android:id="@+id/tv_channel_subscribers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/home_channel_list_subscribers"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/grey_shade_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_channel_name" />

</androidx.constraintlayout.widget.ConstraintLayout>