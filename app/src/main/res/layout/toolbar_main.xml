<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="7dp">

    <ImageView
        android:id="@+id/iv_toolbar_main_logo"
        android:layout_width="94dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/description_main_logo_image"
        android:src="@mipmap/ic_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_toolbar_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비디오"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_toolbar_tour_spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행지"
        app:layout_constraintEnd_toStartOf="@id/btn_toolbar_video"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>